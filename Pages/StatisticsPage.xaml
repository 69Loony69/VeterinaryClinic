<Page x:Class="VeterinaryСlinic.Pages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinaryСlinic.Pages" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisticsPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFCF5FC" Offset="0"/>
                <GradientStop Color="#FFE3F7DE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Статистика пациентов в клиники" HorizontalAlignment="Center" FontSize="35" Margin="0 30 0 0" />
        <lvc:PieChart x:Name="myChart" Margin="0 80 0 0" Height="550">
            <lvc:PieChart.ChartLegend>
                <lvc:DefaultLegend Margin="-400 0 0 0"/>
            </lvc:PieChart.ChartLegend>
            <!-- Остальная часть вашего кода диаграммы -->
        </lvc:PieChart>
        <Image Source="/Image/Love.png" Width="500" Margin="0 0 0 0" HorizontalAlignment="Left"  />

    </Grid>
</Page>
